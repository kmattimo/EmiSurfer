<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout_DICKS">

    <com.kylemattimore.emisurfer.KylesView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_canvas"
        android:layout_alignParentStart="true">
    </com.kylemattimore.emisurfer.KylesView>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewProgress"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Epilepsy"
        android:id="@+id/sw_flash"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dots"
        android:id="@+id/sw_dots"
        android:layout_below="@+id/sw_flash"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignEnd="@+id/sw_flash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_factor"
        android:layout_below="@+id/textViewProgress"
        android:layout_alignEnd="@+id/view_canvas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/seekBar1"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spawn"
        android:id="@+id/spawnWorker"
        android:layout_below="@+id/seekBar1"
        android:layout_alignEnd="@+id/view_canvas"
        android:onClick="spawnWorker"
        android:nestedScrollingEnabled="false" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/seekBarAutoFlash"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_alignEnd="@+id/tv_factor" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarAutoFlash"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_alignEnd="@+id/view_canvas" />

</RelativeLayout>
